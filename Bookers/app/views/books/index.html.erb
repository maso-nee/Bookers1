
<% if flash[:notice] %>
  <p class="flash"><%= flash[:notice] %></p>
<% end %>


<h1 class ="main-title">Books</h1>
<table>
	<thead>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th colspan="3"></th>
	</tr>
    </thead>
    <tbody>
	<% @books.each do |book| %>
	    <tr>
		    <td nowrap><%= book.title %></td>
		    <td nowrap><%= book.body %></td>
            <td>
                <%= link_to "Show",book_path(book.id),class: "show_#{book.id}" %>
            </td>
            <td>
            	<%= link_to "Edit",edit_book_path(book.id),class: "edit_#{book.id}" %>
            </td>
            <td>
                <%= link_to "Destroy",book_path(book.id),method: :delete,
                data: {confirm: 'Do you really want to delete this?'},class: "destroy_#{book.id}" %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
<h2 class="sub-title">New book</h2>
<%= form_for(@book) do |f| %>
    <p class="sub-text">Title</p>
    <%= f.text_field :title , class: "book_title" %>
    <p class="sub-text">Body</p>
    <%= f.text_area :body , class: "book_body" %>
    <p class="sub-text"><%= f.submit 'create book' %></p>
<% end %>
